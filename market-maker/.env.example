# =============================================================================
# Octarine Market Maker Bot Configuration
# =============================================================================

# API Configuration
API_BASE_URL=https://api.mysticfinance.xyz
# API key (can also be stored in Secret Manager as MYSTIC_LST_MARKET_MAKER_API_KEY)
MARKET_MAKER_API_KEY=

# Wallet Configuration (REQUIRED)
# Your wallet private key for signing orders and transactions
# Can also be stored in Secret Manager as MYSTIC_LST_MARKET_MAKER_PRIVATE_KEY
PRIVATE_KEY=
# Your wallet address (must match the private key)
MARKET_MAKER_ADDRESS=

# Network Configuration
RPC_URL=https://rpc.plume.org

# =============================================================================
# Google Secret Manager (Optional - for secure credential storage)
# =============================================================================
# Enable to fetch PRIVATE_KEY and MARKET_MAKER_API_KEY from Secret Manager
# instead of .env file. Secrets should be named:
#   - MYSTIC_LST_MARKET_MAKER_PRIVATE_KEY
#   - MYSTIC_LST_MARKET_MAKER_API_KEY
USE_SECRET_MANAGER=false
# Your GCP project ID (required if USE_SECRET_MANAGER=true)
GCP_PROJECT_ID=

# =============================================================================
# Strategy Settings
# =============================================================================

# Accepted tokens for redemption (comma-separated addresses, or * for all)
ACCEPTED_TOKENS=*

# Price spread for RFQ bidding (e.g., 0.98 = 2% spread/fee)
PRICE_SPREAD=0.98

# Price spread for liquidations (e.g., 0.99 = 1% spread)
LIQUIDATION_SPREAD=0.99

# Minimum amount to bid on (in wei)
MIN_BID_AMOUNT_WEI=100

# Supported chain IDs (comma-separated, e.g., 98866,1,137)
# The bot will poll/listen for opportunities on these chains
SUPPORTED_CHAINS=98866

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable RFQ bidding loop
ENABLE_BIDDING=true

# Enable/disable liquidation monitoring loop
ENABLE_LIQUIDATIONS=true

# =============================================================================
# Polling Intervals (in milliseconds)
# =============================================================================

BIDDING_POLL_INTERVAL_MS=5000
LIQUIDATION_POLL_INTERVAL_MS=10000

# =============================================================================
# WebSocket Configuration (Optional)
# Enable for real-time events instead of/alongside polling
# =============================================================================

WS_ENABLED=false
WS_URL=wss://api.mysticfinance.xyz/ws
WS_RECONNECT_INTERVAL_MS=5000

# =============================================================================
# Slack Notifications (Optional)
# Get notified on bid wins, liquidations, and errors
# =============================================================================

SLACK_ENABLED=false
# Create an incoming webhook at https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# =============================================================================
# Health Check Configuration
# =============================================================================

# Minimum ETH balance required to start (in wei)
# Default: 0.01 ETH = 10000000000000000
MIN_ETH_BALANCE_WEI=10000000000000000

# =============================================================================
# Logging
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Dashboard Configuration (Optional)
# Web UI for monitoring redemptions, liquidations, and earnings
# =============================================================================

# Enable the dashboard web UI
DASHBOARD_ENABLED=false

# Dashboard server port
DASHBOARD_PORT=3000

# Basic auth credentials for dashboard access (REQUIRED if dashboard enabled)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=

# SQLite database path for historical data (relative to project root)
DATABASE_PATH=./data/market-maker.db
